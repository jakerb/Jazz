body {
	background: $isChrome;
}

html,
body {
	padding: 10px;
	margin: 0px;
	border: [scope.numb * 2]px solid;
}

.box {
	width: 20px;
	height: 20px;
	border: 1px solid [scope.boxColor];
	position: [scope.pos];
}


/* Set Jazz Variables */
jazz {
	set: [scope.numb = 1];
	if: [if(scope.statement == true) scope.pos = 'relative' ];
	if: [if(scope.statement != true) scope.pos = 'absolute' ];
}